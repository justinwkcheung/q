<h1 class="title">Login</h1>



<div class="login-form">
  <%= form_tag sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
</div>

  <button class="btn login-session white" id="login-button" type="submit" name="action">LOGIN</button>

<% end %>
